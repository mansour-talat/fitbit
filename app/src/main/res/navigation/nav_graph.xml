<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainScreenFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.su.gym.WelcomeFragment"
        android:label="Welcome"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcomeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_trainer_registration"
            app:destination="@id/nav_trainer_registration"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.su.gym.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_mainScreenFragment"
            app:destination="@id/mainScreenFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_trainer_registration"
            app:destination="@id/nav_trainer_registration"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.su.gym.RegistrationFragment"
        android:label="Register"
        tools:layout="@layout/fragment_registration">
        <action
            android:id="@+id/action_registerFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/mainScreenFragment"
        android:name="com.su.gym.MainScreenFragment"
        android:label="Home"
        tools:layout="@layout/fragment_main_screen">
        <action
            android:id="@+id/action_mainScreenFragment_to_bmiCalculator"
            app:destination="@id/nav_bmi_calculator" />
        <action
            android:id="@+id/action_mainScreenFragment_to_workoutDietFragment"
            app:destination="@id/workoutDietFragment" />
        <action
            android:id="@+id/action_mainScreenFragment_to_trainerListFragment"
            app:destination="@id/trainerListFragment" />
        <action
            android:id="@+id/action_mainScreenFragment_to_feedbackFragment"
            app:destination="@id/feedbackFragment" />
        <action
            android:id="@+id/action_mainScreenFragment_to_navigation_food_history"
            app:destination="@id/navigation_food_history" />
        <action
            android:id="@+id/action_mainScreenFragment_to_dialog_report_conflict"
            app:destination="@id/dialog_report_conflict" />
    </fragment>

    <fragment
        android:id="@+id/nav_dashboard"
        android:name="com.su.gym.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_activityHistoryFragment"
            app:destination="@id/activityHistoryFragment" />
    </fragment>

    <fragment
        android:id="@+id/activityHistoryFragment"
        android:name="com.su.gym.ActivityHistoryFragment"
        android:label="Activity History"
        tools:layout="@layout/fragment_activity_history">
        <action
            android:id="@+id/action_activityHistoryFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_trainer_registration"
        android:name="com.su.gym.TrainerRegistrationFragment"
        android:label="Trainer Registration"
        tools:layout="@layout/fragment_trainer_registration">
        <action
            android:id="@+id/action_trainer_registration_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_trainer_registration"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:launchSingleTop="true" />
    </fragment>

    <fragment
        android:id="@+id/updateProfileFragment"
        android:name="com.su.gym.UpdateProfileFragment"
        android:label="Update Profile"
        tools:layout="@layout/fragment_update_profile">
        <action
            android:id="@+id/action_updateProfileFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/updateProfileFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/nav_bmi_calculator"
        android:name="com.su.gym.BMICalculatorFragment"
        android:label="BMI Calculator"
        tools:layout="@layout/fragment_bmi_calculator" />

    <fragment
        android:id="@+id/navigation_food_history"
        android:name="com.su.gym.FoodHistoryFragment"
        android:label="Food History"
        tools:layout="@layout/fragment_food_history">
        <action
            android:id="@+id/action_food_history_to_home"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.su.gym.ChatFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_chat">
        <argument
            android:name="trainerId"
            app:argType="string" />
        <action
            android:id="@+id/action_chatFragment_to_trainerListFragment"
            app:destination="@id/trainerListFragment"
            app:popUpTo="@id/trainerListFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/trainerListFragment"
        android:name="com.su.gym.TrainerListFragment"
        android:label="Trainers"
        tools:layout="@layout/fragment_trainer_list">
        <action
            android:id="@+id/action_trainerListFragment_to_mainScreenFragment"
            app:destination="@id/mainScreenFragment" />
        <action
            android:id="@+id/action_trainerListFragment_to_workoutDietFragment"
            app:destination="@id/workoutDietFragment" />
    </fragment>

    <fragment
        android:id="@+id/workoutDietFragment"
        android:name="com.su.gym.WorkoutDietFragment"
        android:label="Workout &amp; Diet"
        tools:layout="@layout/fragment_workout_diet">
        <action
            android:id="@+id/action_workoutDietFragment_to_plansContainerFragment"
            app:destination="@id/plansContainerFragment" />
        <action
            android:id="@+id/action_workoutDietFragment_to_mainScreenFragment"
            app:destination="@id/mainScreenFragment" />
        <action
            android:id="@+id/action_workoutDietFragment_to_trainerListFragment"
            app:destination="@id/trainerListFragment" />
    </fragment>

    <fragment
        android:id="@+id/feedbackFragment"
        android:name="com.su.gym.FeedbackFragment"
        android:label="Send Feedback"
        tools:layout="@layout/fragment_feedback">
        <action
            android:id="@+id/action_feedbackFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_report_conflict"
        android:name="com.su.gym.ReportConflictFragment"
        android:label="Report a Conflict"
        tools:layout="@layout/fragment_report_conflict" />

    <fragment
        android:id="@+id/nav_add_exercises"
        android:name="com.su.gym.AddExercisesFragment"
        android:label="Add My Exercises"
        tools:layout="@layout/fragment_add_exercises" />

    <fragment
        android:id="@+id/plansContainerFragment"
        android:name="com.su.gym.PlansContainerFragment"
        android:label="Plans"
        tools:layout="@layout/fragment_plans_container">
        <action
            android:id="@+id/action_plansContainerFragment_to_exerciseDetailsFragment"
            app:destination="@id/exerciseDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/nutritionPlansFragment"
        android:name="com.su.gym.NutritionPlansFragment"
        android:label="Nutrition Plans"
        tools:layout="@layout/fragment_nutrition_plans">
        <action
            android:id="@+id/action_nutritionPlansFragment_to_nutritionPlanDetailsFragment"
            app:destination="@id/nutritionPlanDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/nutritionPlanDetailsFragment"
        android:name="com.su.gym.NutritionPlanDetailsFragment"
        android:label="Plan Details"
        tools:layout="@layout/fragment_nutrition_plan_details">
        <argument
            android:name="planId"
            app:argType="string" />
        <deepLink
            android:id="@+id/deeplink_nutrition_plan_details"
            app:uri="gym://nutrition/plan/{planId}" />
    </fragment>

    <fragment
        android:id="@+id/workoutPlansFragment"
        android:name="com.su.gym.WorkoutPlansFragment"
        android:label="Workout Plans">
        <action
            android:id="@+id/action_workoutPlansFragment_to_exerciseDetailsFragment"
            app:destination="@id/exerciseDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/exerciseDetailsFragment"
        android:name="com.su.gym.ExerciseDetailsFragment"
        android:label="Exercise Details">
        <argument
            android:name="exerciseId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/trainerChatFragment"
        android:name="com.su.gym.TrainerChatFragment"
        android:label="Chat with Trainer"
        tools:layout="@layout/fragment_trainer_chat" />

    <fragment
        android:id="@+id/navigation_chatbot"
        android:name="com.su.gym.ChatbotFragment"
        android:label="AI Assistant"
        tools:layout="@layout/fragment_chatbot" />

    <fragment
        android:id="@+id/dialog_report_conflict"
        android:name="com.su.gym.ReportConflictFragment"
        android:label="Report Conflict"
        tools:layout="@layout/dialog_report_conflict" />

</navigation> 