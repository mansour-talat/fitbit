<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trainer_nav_graph"
    app:startDestination="@id/nav_trainer_chat_list">

    <fragment
        android:id="@+id/nav_trainer_chat_list"
        android:name="com.su.gym.TrainerChatListFragment"
        android:label="Chats"
        tools:layout="@layout/fragment_trainer_chat_list">
        <action
            android:id="@+id/action_trainerChatList_to_trainerChat"
            app:destination="@id/nav_trainer_chat" />
    </fragment>

    <fragment
        android:id="@+id/nav_trainer_chat"
        android:name="com.su.gym.TrainerChatFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_trainer_chat">
        <argument
            android:name="userId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

</navigation> 